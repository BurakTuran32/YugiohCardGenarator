<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emptycard"
    tools:context=".ui.creatCardScreen.CreatCardFragment">

    <EditText
        android:id="@+id/cardName"
        android:layout_width="338dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:hint="ENTER NAME"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="289dp"
        android:layout_height="301dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/select_photo"
        app:layout_constraintBottom_toTopOf="@+id/cardDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardName" />

    <EditText
        android:id="@+id/cardDesc"
        android:layout_width="331dp"
        android:layout_height="64dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName"
        android:hint="Enter Desc"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/atkEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <EditText
        android:id="@+id/atkEt"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="9999"
        android:inputType="number"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardDesc"
        app:layout_constraintTop_toBottomOf="@+id/cardDesc" />

    <EditText
        android:id="@+id/defEt"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="9999"
        android:inputType="number"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/atkEt"
        app:layout_constraintTop_toBottomOf="@+id/cardDesc" />

    <TextView
        android:id="@+id/setImage"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_bg"
        android:paddingStart="15dp"
        android:text="Save card"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>