<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="191dp"
    android:layout_height="284dp"
    android:background="@drawable/emptycard">


    <TextView
        android:id="@+id/nameTv"
        android:layout_width="153dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="27dp"
        android:text="TextView"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CardImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/atkTv"
        android:layout_width="21dp"
        android:layout_height="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="9999"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/defTv"
        app:layout_constraintTop_toBottomOf="@+id/descTv" />

    <TextView
        android:id="@+id/defTv"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="13dp"
        android:text="9999"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/atkTv"
        app:layout_constraintEnd_toStartOf="@+id/atkTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atkTv"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/CardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/descTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTv"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/descTv"
        android:layout_width="153dp"
        android:layout_height="31dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/atkTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardImage" />
</androidx.constraintlayout.widget.ConstraintLayout>